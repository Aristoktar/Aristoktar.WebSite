@model MyPortfolio.WebSite.Models.Account.LogInModel
@{
    ViewBag.Title = "LogIn";
    Layout = null;
}

@if (Model !=null&& Model.StatusPost) {
    <script type="text/javascript">

        window.close();
        opener.location.reload(true);

    </script>
}
<h2>LogIn</h2>
@using ( Html.BeginForm ( "LogIn" , "Account" , FormMethod.Post ,new {@id ="login_form"}) ) {

    @Html.LabelFor( m => m.Email );
    @Html.TextBoxFor(m=>m.Email);
    
    @Html.LabelFor( m => m.Password );
    @Html.PasswordFor(m=>m.Password);
    <input type="submit" value="login">
}
<button id="close_window" onclick="window.close()">close</button>


    
    